rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /canvases/{coupleId}/{document=**} {
      allow read, write: if request.auth.uid in get(/databases/$(database)/documents/couples/$(coupleId)).data.users;
    }

    match /couples/{coupleId} {
      allow read: if request.auth.uid in get(/databases/$(database)/documents/couples/$(coupleId)).data.users;
      allow create: if request.auth.uid == request.resource.data.users[0];
      allow update: if request.auth.uid in resource.data.users;
    }
  }
}
